<Window x:Class="HepaticaAI.WPFClient.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="MainWindow"
	Height="450"
	Width="800"
	Background="#1E1E1E"
	Foreground="White">

	<Grid Margin="10">
		<!-- Разметка сетки: 3 строки и 2 столбца 
             для упрощённого размещения основных элементов -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Верхняя часть: Изображение + 2 кнопки -->

		<!-- Изображение в левом верхнем углу -->
		<!--<Image Grid.Row="0"
		       Grid.Column="0"
		       Source="Images/your_image.png"
		       Width="60"
		       Height="60"
		       Margin="0,0,10,0"
		       VerticalAlignment="Top"
		       HorizontalAlignment="Left" />-->

		<!-- Кнопка "Change system prompts" (слева, рядом с изображением) -->
		<Button Grid.Row="0"
			Grid.Column="1"
			Content="Change system prompts"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,0,0,10"
			Padding="10,5"
			Background="#2D2D2D" />

		<Button Grid.Row="0"
			Grid.Column="0"
			Content="Change system prompts"
			HorizontalAlignment="Center"
			Margin="0,0,10,0"
			Padding="10,5"
			Width="200"
			Height="60"
			Background="#2D2D2D" />

		<!-- Кнопка "Connect to voice" (справа) -->
		<Button Grid.Row="1"
			Grid.Column="1"
			Content="Connect to voice"
			HorizontalAlignment="Right"
			Margin="0,0,0,0"
			Padding="10,5"
			Background="#2D2D2D" />

		<!-- Третья строка: "Delete all messages history" и "Chat history" -->
		<!-- Можно расположить их рядом или один под другим -->

		<!-- Кнопка "Delete all messages history" (слева) -->
		<Button Grid.Row="2"
			Grid.Column="0"
			Content="Delete all messages history"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="0,0,10,0"
			Padding="10,5"
			Background="#2D2D2D" />

		<!-- Кнопка "Chat history" (справа) -->
		<Button Grid.Row="2"
			Grid.Column="1"
			Content="Chat history"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Padding="10,5"
			Background="#2D2D2D" />
	</Grid>
</Window>
