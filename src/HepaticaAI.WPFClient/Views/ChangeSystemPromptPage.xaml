<Page x:Class="HepaticaAI.WPFClient.Views.ChangeSystemPromptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
      xmlns:local="clr-namespace:HepaticaAI.WPFClient.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ChangeSystemPromptPage">

	<Grid>
		<!-- Определяем строки в Grid -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<!-- Кнопка "Go Back" -->
			<RowDefinition Height="*" />
			<!-- Прокручиваемая область -->
			<RowDefinition Height="Auto" />
			<!-- Кнопка "Apply" -->
		</Grid.RowDefinitions>

		<!-- Кнопка "Go Back" -->
		<Button Content="Go Back"
			Click="GoBack_Click"
			Margin="10"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Background="WhiteSmoke"
			Height="30px"
			Grid.Row="0" />
		<TextBox Name="CharacterName"
			 Height="30px"
			 Width="500px"
			 Grid.Row="0"
			 HorizontalAlignment="Center"
			 VerticalAlignment="Center"></TextBox>

		<!-- ScrollViewer с текстовыми полями -->
		<ScrollViewer VerticalScrollBarVisibility="Auto"
			      HorizontalScrollBarVisibility="Disabled"
			      Margin="10"
			      Grid.Row="1">
			<StackPanel HorizontalAlignment="Center">
				<Border Margin="0,20,0,20"
					BorderBrush="CornflowerBlue"
					BorderThickness="2"
					CornerRadius="5"
					Padding="2">
					<TextBox Name="CurrentPromptEditor"
						 TextWrapping="Wrap"
						 AcceptsReturn="True"
						 VerticalScrollBarVisibility="Auto"
						 HorizontalScrollBarVisibility="Auto"
						 FontFamily="Consolas"
						 FontSize="14"
						 Background="Black"
						 Foreground="White"
						 BorderBrush="Gray"
						 BorderThickness="1"
						 Height="200"
						 Width="400" />
				</Border>

				<Border BorderBrush="Red"
					BorderThickness="2"
					CornerRadius="5"
					Padding="2">
					<TextBox Name="CurrentPromptEditorFirst"
						 TextWrapping="Wrap"
						 AcceptsReturn="True"
						 VerticalScrollBarVisibility="Auto"
						 HorizontalScrollBarVisibility="Auto"
						 FontFamily="Consolas"
						 FontSize="14"
						 Background="Black"
						 Foreground="White"
						 BorderBrush="Gray"
						 BorderThickness="1"
						 Height="200"
						 Width="400" />
				</Border>

				<Border Margin="0,20,0,20"
					BorderBrush="Red"
					BorderThickness="2"
					CornerRadius="5"
					Padding="2">
					<TextBox Name="CurrentPromptEditorSecond"
						 TextWrapping="Wrap"
						 AcceptsReturn="True"
						 VerticalScrollBarVisibility="Auto"
						 HorizontalScrollBarVisibility="Auto"
						 FontFamily="Consolas"
						 FontSize="14"
						 Background="Black"
						 Foreground="White"
						 BorderBrush="Gray"
						 BorderThickness="1"
						 Height="200"
						 Width="400" />
				</Border>
			</StackPanel>
		</ScrollViewer>

		<!-- Фиксированная кнопка "Apply" в левом нижнем углу -->
		<Button Content="Apply"
			Click="Apply_Click"
			Margin="10"
			Width="100"
			Height="40"
			Background="Green"
			Foreground="White"
			FontWeight="Bold"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Grid.Row="2" />
	</Grid>
</Page>
